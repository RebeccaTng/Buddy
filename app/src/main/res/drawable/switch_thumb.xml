<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="50dp"
        android:top="50dp"
        android:left="50dp"
        android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="@color/beige" />
            <size android:width="25dp" android:height="17.89dp" />

            <!-- results in the track looking smaller than the thumb -->
            <stroke
                android:width="8dp"
                android:color="#00ffffff"/>
        </shape>
    </item>

</selector>